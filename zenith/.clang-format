IndentWidth: 4
PointerAlignment: Left
SortIncludes: true

IncludeCategories:
  - Regex:           'glad.h' # glad.h needs to be included before glfw3.h
    Priority:        1
    CaseSensitive:   true
  - Regex:           'imgui.h' # imgui.h and imgui_impl*.h need to be included before ImGuizmo.h
    Priority:        1
    CaseSensitive:   true
  - Regex:           'imgui_impl'
    Priority:        1
    CaseSensitive:   true
  - Regex:           'Jolt.h' # Jolt.h needs to be included before all other Jolt headers
    Priority:        1
    CaseSensitive:   true
  - Regex:           'glfw3.h'
    Priority:        2
    CaseSensitive:   true
  - Regex:           'ImGuizmo.h'
    Priority:        2
    CaseSensitive:   true

BreakBeforeBraces: Custom
BraceWrapping:
  AfterCaseLabel: true
  AfterClass: true
  AfterControlStatement: Always
  AfterEnum: true
  AfterFunction: true
  AfterNamespace: false
  AfterStruct: true
  AfterUnion: true
  AfterExternBlock: true
  BeforeCatch: true
  BeforeElse: true
  IndentBraces: false
  SplitEmptyFunction: false

Cpp11BracedListStyle: false
AccessModifierOffset: -4

AllowAllArgumentsOnNextLine: false
BreakBeforeBinaryOperators: NonAssignment
SpaceAfterTemplateKeyword: false
AllowBreakBeforeNoexceptSpecifier: Always

AllowShortBlocksOnASingleLine: Empty
AllowShortFunctionsOnASingleLine: Inline

ColumnLimit: 120
MaxEmptyLinesToKeep: 1
InsertNewlineAtEOF: true