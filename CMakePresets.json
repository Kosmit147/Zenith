{
  "version": 3,
  "configurePresets": [
    {
      "name": "windows-base",
      "description": "Target Windows with the Visual Studio development environment.",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "installDir": "${sourceDir}/out/install/${presetName}",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "cl.exe",
        "CMAKE_CXX_COMPILER": "cl.exe"
      },
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "x64-debug",
      "displayName": "x64-debug",
      "description": "Debug build.",
      "inherits": "windows-base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "ZTH_DEVELOPER": "ON",
        "ZTH_ASSERTIONS": "ON",
        "ZTH_GL_DEBUG": "ON",
        "ZTH_DEBUG_LOGGING": "ON"
      }
    },
    {
      "name": "x64-optimized-debug",
      "displayName": "x64-optimized-debug",
      "description": "Debug build with optimizations enabled.",
      "inherits": "windows-base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo",
        "ZTH_DEVELOPER": "ON",
        "ZTH_ASSERTIONS": "ON",
        "ZTH_GL_DEBUG": "ON",
        "ZTH_DEBUG_LOGGING": "ON"
      }
    },
    {
      "name": "x64-development",
      "displayName": "x64-development",
      "description": "Optimized build with some debugging features enabled.",
      "inherits": "windows-base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo",
        "ZTH_DEVELOPER": "ON",
        "ZTH_ASSERTIONS": "OFF",
        "ZTH_GL_DEBUG": "ON",
        "ZTH_DEBUG_LOGGING": "ON"
      }
    },
    {
      "name": "x64-release-with-deb-info",
      "displayName": "x64-release-with-deb-info",
      "description": "Release build with debug information.",
      "inherits": "windows-base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo",
        "ZTH_DEVELOPER": "ON",
        "ZTH_ASSERTIONS": "OFF",
        "ZTH_GL_DEBUG": "OFF",
        "ZTH_DEBUG_LOGGING": "OFF"
      }
    },
    {
      "name": "x64-release",
      "displayName": "x64-release",
      "description": "Release build without debug information.",
      "inherits": "windows-base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "ZTH_DEVELOPER": "ON",
        "ZTH_ASSERTIONS": "OFF",
        "ZTH_GL_DEBUG": "OFF",
        "ZTH_DEBUG_LOGGING": "OFF"
      }
    }
  ]
}